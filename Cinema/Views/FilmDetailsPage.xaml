<Page
    x:Class="Cinema.Views.FilmDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Cinema.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PageRoot"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding DataContext.NavigateCommand, ElementName=PageRoot}"
            CommandParameter="filmsPage"
            Content="Вернуться" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Width="400"
            Height="auto">

            <Image
                Width="300"
                Height="400"
                Source="{Binding DataContext.FilmViewModel.Poster, ElementName=PageRoot}" />

            <TextBlock
                Width="auto"
                FontSize="16"
                FontWeight="Bold"
                HorizontalTextAlignment="Center"
                Text="{Binding DataContext.FilmViewModel.Title, ElementName=PageRoot}" />

            <TextBlock Text="{Binding DataContext.FilmViewModel.Year, ElementName=PageRoot}" />

            <TextBlock
                Foreground="OrangeRed"
                Text="{Binding DataContext.FilmViewModel.Genres, ElementName=PageRoot}"
                TextWrapping="WrapWholeWords" />

            <TextBlock Text="{Binding DataContext.FilmViewModel.Description, ElementName=PageRoot}" TextWrapping="Wrap" />

            <Button
                Command="{Binding DataContext.AddFilmToFavoritesCommand, ElementName=PageRoot}"
                CommandParameter="{Binding DataContext.FilmViewModel.Film, ElementName=PageRoot}"
                Content="{Binding DataContext.FavouriteButtonText, ElementName=PageRoot}" />

        </StackPanel>

    </Grid>
</Page>
